<%= turbo_frame_tag "field#{field_nr}" do %>
  <% if game.public_send("field#{field_nr}_character") %>
    <%= show_character(game, player, field_nr) %>
  <% else %>
    <%= form_with model: game do |f| %>
      <%= f.hidden_field :field_nr, value: field_nr %>
      <%= f.hidden_field :player_id, value: player.id %>
      <%= f.submit 'X', class: '!text-orange-300 !bg-orange-300 hover:!bg-orange-400' %>
    <% end %>
  <% end %>
<% end %>
